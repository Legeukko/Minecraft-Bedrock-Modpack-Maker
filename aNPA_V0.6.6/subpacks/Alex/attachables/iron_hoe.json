{
  "format_version": "1.10.0",
  "minecraft:attachable": {
    "description": {
      "identifier": "minecraft:iron_hoe",
      "materials": {
        "default": "entity_alphatest",
        "enchanted": "entity_alphatest_glint"
      },
      "textures": {
        "default": "textures/items/iron_hoe",
        "enchanted": "textures/misc/enchanted_item_glint"
      },
      "geometry": {
        "default": "geometry.sword",
        "default0": "geometry.sword0",
        "default1": "geometry.sword1"
      },
      "animations": {
        "wield": "animation.bow.wield"
      },
      "scripts": {
        "animate": [
          "wield"
        ]
      },
      "render_controllers": [
          {
              "controller.render.item_default": "c.is_first_person && query.owner_identifier == 'minecraft:player'"
          },
          {
              "controller.render.default0": "query.owner_identifier != 'minecraft:player'"
          },
          {
              "controller.render.default1": "!c.is_first_person && query.owner_identifier == 'minecraft:player'"
          }
        ]
    }
  }
}
