{
	"format_version" : "1.10.0",
	"animation_controllers" : {
		"controller.animation.player.bob": {
			"states": {
				"default": {
					"blend_transition": 0.2,
					"transitions": [
						{
							"1" : "!variable.is_first_person && query.is_breathing"
						}
					]
				},
				"1": {
					"animations": [
						"bob.body",
						{
						"cn.bob": "!variable.bow && !variable.shield_main"
						}
					],
					"blend_transition": 0.2,
					"transitions": [
						{
							"default": "variable.is_first_person || !query.is_breathing"
						}
					]
				}
			}
		},
		"controller.animation.player.bob.body": {
			"states": {
				"default": {
					"blend_transition": 0.3,
					"transitions": [
						{
							"1" : "!variable.is_first_person && query.is_breathing && !query.ground_speed"
						}
					]
				},
				"1": {
					"animations": [
						"bob.arms",
						"bob.legs"
					],
					"blend_transition": 1,
					"transitions": [
						{
							"default": "variable.is_first_person || !query.is_breathing || query.ground_speed"
						}
					]
				}
			}
		}
	}
}